{
  "name": "scripts",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "forge install && forge build",
    "deploy": "every set deploy --json register/contract.json src/DiceSet1155.sol:DiceSet1155 ${SET_REG?} ${KIND_ID?} ${KIND_REV?}",
    "register": "every set register $(every pick contract.addr matter.hash) --json register/set.json",
    "upload": "every matter register elements/data.json --json register/matter.json",
    "all": "run-s 'upload -- {@}' 'deploy -- {@}' 'register -- {@}' --",
    "vars": "bash vars.sh",
    "predeploy": "run-s build"
  },
  "dependencies": {
    "npm-run-all2": "^8.0.4"
  }
}
